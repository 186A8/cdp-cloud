    </parent>
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>
    <artifactId>anan-cloud</artifactId>
    <version>3.0.0-SNAPSHOT</version>
    <properties>
        <anan-placeholder1>${</anan-placeholder1>
        <anan-placeholder2>}</anan-placeholder2>
        <anan-spring-cloud.version>Greenwich.SR3</anan-spring-cloud.version>
        <anan-spring-cloud-alibaba.version>2.1.0.RELEASE</anan-spring-cloud-alibaba.version>
        <anan-spring-boot-admin.version>2.1.3</anan-spring-boot-admin.version>
        <anan-spring-cloud-zipkin.version>2.12.5</anan-spring-cloud-zipkin.version>
        <anan-druid.version>1.1.21</anan-druid.version>
        <anan-platformapi.version>3.0.0-SNAPSHOT</anan-platformapi.version>
        <anan-platform.version>2.10-SNAPSHOT</anan-platform.version>
        <anan-platformserver.version>3.0.0-SNAPSHOT</anan-platformserver.version>
