<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>com.github.fosin</groupId>
        <artifactId>cdp-dependencies</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>
    <artifactId>cdp-cloud</artifactId>
    <properties>
        <cdp-spring-cloud.version>Edgware.SR5</cdp-spring-cloud.version>
        <cdp-spring-boot-admin.version>1.5.7</cdp-spring-boot-admin.version>
        <cdp-druid.version>1.1.9</cdp-druid.version>
        <cdp-platformapi.version>1.0.0-SNAPSHOT</cdp-platformapi.version>
        <cdp-platform.version>1.0.0-SNAPSHOT</cdp-platform.version>
        <cdp-platformserver.version>1.0.0-SNAPSHOT</cdp-platformserver.version>
        <cdp-authserver.version>1.0.0-SNAPSHOT</cdp-authserver.version>
        <cdp-adminserver.version>1.0.0-SNAPSHOT</cdp-adminserver.version>
        <cdp-sleuthserver.version>1.0.0-SNAPSHOT</cdp-sleuthserver.version>
        <cdp-eurekaserver.version>1.0.0-SNAPSHOT</cdp-eurekaserver.version>
        <cdp-configserver.version>1.0.0-SNAPSHOT</cdp-configserver.version>
        <cdp-zuulgateway.version>1.0.0-SNAPSHOT</cdp-zuulgateway.version>
    </properties>
    <profiles>
        <profile>
            <id>local</id>
            <properties>
                <profileActive>local</profileActive>
                <eureka.client.service-url.defaultZone>
                    http://${eureka.username}:${eureka.password}@localhost:1000/eureka/
                </eureka.client.service-url.defaultZone>
                <spring.cloud.config.username>cdp</spring.cloud.config.username>
                <spring.cloud.config.password>local</spring.cloud.config.password>
                <spring.cloud.config.profileActive>native</spring.cloud.config.profileActive>
                <spring.cloud.inetutils.preferred-networks>192.168.137.</spring.cloud.inetutils.preferred-networks>
                <spring.rabbitmq.host>192.168.137.155</spring.rabbitmq.host>
                <spring.rabbitmq.port>5672</spring.rabbitmq.port>
                <spring.rabbitmq.username>cdp</spring.rabbitmq.username>
                <spring.rabbitmq.password>local</spring.rabbitmq.password>
                <eureka.username>cdp</eureka.username>
                <eureka.password>local</eureka.password>
            </properties>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>dev</id>
            <properties>
                <profileActive>dev</profileActive>
                <eureka.client.service-url.defaultZone>
                    http://${eureka.username}:${eureka.password}${cdp-at}192.168.2.243:1000/eureka/,http://${eureka.username}:${eureka.password}${cdp-at}192.168.2.244:1000/eureka/
                </eureka.client.service-url.defaultZone>
                <spring.cloud.config.username>cdp</spring.cloud.config.username>
                <spring.cloud.config.password>dev</spring.cloud.config.password>
                <spring.cloud.config.profileActive>subversion</spring.cloud.config.profileActive>
                <spring.cloud.inetutils.preferred-networks>192.168.2.</spring.cloud.inetutils.preferred-networks>
                <spring.rabbitmq.host>192.168.2.242</spring.rabbitmq.host>
                <spring.rabbitmq.port>5672</spring.rabbitmq.port>
                <spring.rabbitmq.username>cdp</spring.rabbitmq.username>
                <spring.rabbitmq.password>dev</spring.rabbitmq.password>
                <eureka.username>cdp</eureka.username>
                <eureka.password>dev</eureka.password>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>test</id>
            <properties>
                <profileActive>test</profileActive>
                <eureka.client.service-url.defaultZone>
                    http://${eureka.username}:${eureka.password}@localhost:1000/eureka/
                </eureka.client.service-url.defaultZone>
                <spring.cloud.config.username>cdp</spring.cloud.config.username>
                <spring.cloud.config.password>test</spring.cloud.config.password>
                <spring.cloud.config.profileActive>test</spring.cloud.config.profileActive>
                <spring.cloud.inetutils.preferred-networks></spring.cloud.inetutils.preferred-networks>
                <spring.rabbitmq.host>192.168.137.155</spring.rabbitmq.host>
                <spring.rabbitmq.port>5672</spring.rabbitmq.port>
                <spring.rabbitmq.username>cdp</spring.rabbitmq.username>
                <spring.rabbitmq.password>test</spring.rabbitmq.password>
                <eureka.username>cdp</eureka.username>
                <eureka.password>test</eureka.password>
            </properties>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>prod</id>
            <properties>
                <profileActive>prod</profileActive>
                <eureka.client.service-url.defaultZone>
                    http://${eureka.username}:${eureka.password}@localhost:1000/eureka/
                </eureka.client.service-url.defaultZone>
                <spring.cloud.config.username>cdp</spring.cloud.config.username>
                <spring.cloud.config.password>prod</spring.cloud.config.password>
                <spring.cloud.config.profileActive>prod</spring.cloud.config.profileActive>
                <spring.cloud.inetutils.preferred-networks></spring.cloud.inetutils.preferred-networks>
                <spring.rabbitmq.host>192.168.137.155</spring.rabbitmq.host>
                <spring.rabbitmq.port>5672</spring.rabbitmq.port>
                <spring.rabbitmq.username>cdp</spring.rabbitmq.username>
                <spring.rabbitmq.password>prod</spring.rabbitmq.password>
                <eureka.username>cdp</eureka.username>
                <eureka.password>prod</eureka.password>
            </properties>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
        </profile>
    </profiles>
    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-log4j2</artifactId>
        </dependency>
        <dependency>
            <groupId>com.lmax</groupId>
            <artifactId>disruptor</artifactId>
            <version>3.3.7</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-starter-netflix-eureka-client</artifactId>
        </dependency>
        <dependency>
            <groupId>de.codecentric</groupId>
            <artifactId>spring-boot-admin-starter-client</artifactId>
            <version>${cdp-spring-boot-admin.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>${cdp-spring-cloud.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>druid-spring-boot-starter</artifactId>
                <version>${cdp-druid.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <resources>
            <resource>
                <filtering>true</filtering>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>application*.properties</exclude>
                    <exclude>bootstrap*.yml</exclude>
                </excludes>
            </resource>
            <resource>
                <filtering>true</filtering>
                <directory>src/main/resources</directory>
                <includes>
                    <include>application-${profileActive}*.yml</include>
                    <include>application.yml</include>
                    <include>bootstrap-${profileActive}*.yml</include>
                    <include>bootstrap.yml</include>
                </includes>
            </resource>
        </resources>
        <finalName>${project.artifactId}-${project.version}-${profileActive}</finalName>
        <plugins>
            <!--SpringBoot插件-->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <!-- 资源文件拷贝插件 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <encoding>UTF-8</encoding>
                    <!--不过滤以下后缀的文件-->
                    <nonFilteredFileExtensions>
                        <nonFilteredFileExtension>keystore</nonFilteredFileExtension>
                        <nonFilteredFileExtension>html</nonFilteredFileExtension>
                        <nonFilteredFileExtension>js</nonFilteredFileExtension>
                        <nonFilteredFileExtension>css</nonFilteredFileExtension>
                        <nonFilteredFileExtension>ico</nonFilteredFileExtension>
                        <nonFilteredFileExtension>png</nonFilteredFileExtension>
                        <nonFilteredFileExtension>jpg</nonFilteredFileExtension>
                    </nonFilteredFileExtensions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>