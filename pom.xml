        <profile>
            <id>yaxrmyy</id>
            <properties>
                <profileActive>yaxrmyy</profileActive>
                <spring.cloud.nacos.config.server-addr>nacos-server1:8848,nacos-server2:8848</spring.cloud.nacos.config.server-addr>
                <spring.cloud.nacos.config.namespace>dea72156-b7c0-4687-9d7b-b9315e2631c5</spring.cloud.nacos.config.namespace>
                <spring.cloud.nacos.config.shared-dataids>application.yaml</spring.cloud.nacos.config.shared-dataids>
                <spring.cloud.inetutils.preferred-networks></spring.cloud.inetutils.preferred-networks>
                <docker.register.url>registry.cn-hangzhou.aliyuncs.com</docker.register.url>
