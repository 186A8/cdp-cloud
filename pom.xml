<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>cdp</artifactId>
        <groupId>com.starlight</groupId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>
    <artifactId>cdp-cloud</artifactId>
    <modules>
        <module>cdp-eurekaserver</module>
        <module>cdp-configserver</module>
        <module>cdp-cloudadviced</module>
    </modules>
    <properties>
        <cdp-spring-cloud.version>Edgware.SR4</cdp-spring-cloud.version>
        <cdp-spring-boot-admin.version>1.5.7</cdp-spring-boot-admin.version>
        <cdp-druid.version>1.1.9</cdp-druid.version>
    </properties>
    <profiles>
        <profile>
            <id>local</id>
            <properties>
                <profileActive>local</profileActive>
                <eureka.client.service-url.defaultZone>
                    http://${security.user.name}:${security.user.password}@localhost:1000/eureka/
                </eureka.client.service-url.defaultZone>
                <spring.cloud.config.username>cdp</spring.cloud.config.username>
                <spring.cloud.config.password>local</spring.cloud.config.password>
                <spring.cloud.config.profileActive>native</spring.cloud.config.profileActive>
                <spring.cloud.inetutils.preferred-networks>192.168.137.</spring.cloud.inetutils.preferred-networks>
                <spring.rabbitmq.host>192.168.137.155</spring.rabbitmq.host>
                <spring.rabbitmq.port>5672</spring.rabbitmq.port>
                <spring.rabbitmq.username>cdp</spring.rabbitmq.username>
                <spring.rabbitmq.password>local</spring.rabbitmq.password>
                <security.user.name>cdp</security.user.name>
                <security.user.password>local</security.user.password>
            </properties>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>dev</id>
            <properties>
                <profileActive>dev</profileActive>
                <eureka.client.service-url.defaultZone>
                    http://${security.user.name}:${security.user.password}${cdp-at}192.168.2.243:1000/eureka/,http://${security.user.name}:${security.user.password}${cdp-at}192.168.2.244:1000/eureka/
                </eureka.client.service-url.defaultZone>
                <spring.cloud.config.username>cdp</spring.cloud.config.username>
                <spring.cloud.config.password>dev</spring.cloud.config.password>
                <spring.cloud.config.profileActive>subversion</spring.cloud.config.profileActive>
                <spring.cloud.inetutils.preferred-networks>192.168.2.</spring.cloud.inetutils.preferred-networks>
                <spring.rabbitmq.host>192.168.2.242</spring.rabbitmq.host>
                <spring.rabbitmq.port>5672</spring.rabbitmq.port>
                <spring.rabbitmq.username>cdp</spring.rabbitmq.username>
                <spring.rabbitmq.password>dev</spring.rabbitmq.password>
                <security.user.name>cdp</security.user.name>
                <security.user.password>dev</security.user.password>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>test</id>
            <properties>
                <profileActive>test</profileActive>
                <eureka.client.service-url.defaultZone>
                    http://${security.user.name}:${security.user.password}@localhost:1000/eureka/
                </eureka.client.service-url.defaultZone>
                <spring.cloud.config.username>cdp</spring.cloud.config.username>
                <spring.cloud.config.password>test</spring.cloud.config.password>
                <spring.cloud.config.profileActive>test</spring.cloud.config.profileActive>
                <spring.cloud.inetutils.preferred-networks></spring.cloud.inetutils.preferred-networks>
                <spring.rabbitmq.host>192.168.137.155</spring.rabbitmq.host>
                <spring.rabbitmq.port>5672</spring.rabbitmq.port>
                <spring.rabbitmq.username>cdp</spring.rabbitmq.username>
                <spring.rabbitmq.password>test</spring.rabbitmq.password>
                <security.user.name>cdp</security.user.name>
                <security.user.password>test</security.user.password>
            </properties>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>prod</id>
            <properties>
                <profileActive>prod</profileActive>
                <eureka.client.service-url.defaultZone>
                    http://${security.user.name}:${security.user.password}@localhost:1000/eureka/
                </eureka.client.service-url.defaultZone>
                <spring.cloud.config.username>cdp</spring.cloud.config.username>
                <spring.cloud.config.password>prod</spring.cloud.config.password>
                <spring.cloud.config.profileActive>prod</spring.cloud.config.profileActive>
                <spring.cloud.inetutils.preferred-networks></spring.cloud.inetutils.preferred-networks>
                <spring.rabbitmq.host>192.168.137.155</spring.rabbitmq.host>
                <spring.rabbitmq.port>5672</spring.rabbitmq.port>
                <spring.rabbitmq.username>cdp</spring.rabbitmq.username>
                <spring.rabbitmq.password>prod</spring.rabbitmq.password>
                <security.user.name>cdp</security.user.name>
                <security.user.password>prod</security.user.password>
            </properties>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
        </profile>
    </profiles>
    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-log4j2</artifactId>
        </dependency>
        <dependency>
            <groupId>com.lmax</groupId>
            <artifactId>disruptor</artifactId>
            <version>3.3.7</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-starter-netflix-eureka-client</artifactId>
        </dependency>
        <dependency>
            <groupId>de.codecentric</groupId>
            <artifactId>spring-boot-admin-starter-client</artifactId>
            <version>${cdp-spring-boot-admin.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>${cdp-spring-cloud.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>druid-spring-boot-starter</artifactId>
                <version>${cdp-druid.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <resources>
            <resource>
                <filtering>true</filtering>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>application*.properties</exclude>
                    <exclude>bootstrap*.yml</exclude>
                </excludes>
            </resource>
            <resource>
                <filtering>true</filtering>
                <directory>src/main/resources</directory>
                <includes>
                    <include>application-${profileActive}*.yml</include>
                    <include>application.yml</include>
                    <include>bootstrap-${profileActive}*.yml</include>
                    <include>bootstrap.yml</include>
                </includes>
            </resource>
        </resources>
        <finalName>${project.artifactId}-${project.version}-${profileActive}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <configuration>
                    <skipSource>true</skipSource>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>